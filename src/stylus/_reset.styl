html, body, h1, h2, h3, h4, h5, h6, p
  margin 0
  padding 0

body
  font-family 'Helvetica Neue', Helvetica, Roboto, 'Droid Sans', Arial, Verdana, sans-serif
  font-size 16px

ul, nav, ol
  margin 0
  padding 0

h1, h2, h3, h4, h5, h6
  line-height 1.2
  font-size 100%

a
  text-decoration none
  border none
  outline none
  &:hover
    text-decoration underline
  img
    border-style none

em
  font-style normal
  font-weight bold

*:focus
  border none
